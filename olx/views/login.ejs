<html>

    <head>
        <!-- META TAGS -->
        <meta name="viewport" content="width=device-width, initial-scale=1">

         <!-- ------FONTS---- -->
         <link rel="preconnect" href="https://fonts.gstatic.com">
         <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
         
        <!-- Bootstrap css -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        

         <!-- Cloudflare css -->
         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

         <!-- ---- font awesome ---- -->
         <script src="https://kit.fontawesome.com/e5a9d749f9.js" crossorigin="anonymous"></script>

        <!-- Page CSS -->
        <link rel="stylesheet" href="../public/css/login.css">
  
    <body>
        <div class="container-body">

            <img src="../public/img/business.svg" class= "side-img" >
            <img src="../public/img/bottom.svg" class="bottom-img">
            <img src="../public/img/bottom.svg" class="top-img">

            <div class="login-form">
                <div>
                    <ul class="tabs">
                        <li class="tab col s3"><a class="active" href="#test1">Login</a></li>
                        <li class="tab col s3"><a href="#test2">SignUp</a></li>
                    </ul>
                </div>
                    
                <div id="test1">
                    <form method="post" class="needs-validation" novalidate>
                        <img src="../public/img/OLX Clone logo.png" class="profile-pic">
                        <!-- <h2>Login</h2> -->
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="Email" placeholder="Email" name="email" required>
                            <label for="name" class="form-label"><i class="fas fa-user"></i> &nbsp &nbsp Email Address</label>
                            <div class="invalid-feedback">
                                Please Enter a valid email!
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="Password" placeholder="Password" name="password" required>
                            <label for="Password" class="form-label"><i class="fas fa-lock"></i> &nbsp &nbsp Password</label>
                            <div class="invalid-feedback">
                               Please enter your password!
                            </div>
                        </div>
                        <!-- <div class="form-check checkbox mb-3">
                            <input class="form-check-input" type="checkbox" id="invalidCheck" required>
                            <label class="form-check-label" for="invalidCheck">
                                Agree to terms and conditions
                            </label>
                            <div class="invalid-feedback">
                                You must agree before submitting.
                            </div>
                        </div> -->
                        <!-- <div class="login-redirect">
                            <small><a href="/user/login">Already have an account</a></small>
                        </div> -->
                        <div class="submit-btn mb-3">
                            <button name="action" value="login" class="btn btn-primary" type="submit">Login</button>
                        </div>
                        <% if(locals.message){ %>
                            <%=message %>
                            <% } %>
                    </form>
                </div>
                <div id="test2">
                    <form method="post" class="needs-validation" novalidate>
                        <img src="../public/img/OLX Clone logo.png" class="profile-pic">
                        <!-- <h2>welcome</h2> -->
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="First-name" placeholder="First-Name" name="fisrtName" required>
                            <label for="first-name" class="form-label"><i class="fas fa-user"></i> &nbsp &nbsp First-Name</label>
                            <div class="invalid-feedback">
                                This field can't be empty!
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="Email-signup" placeholder="Email" name="email" required>
                            <label for="Email-signup" class="form-label"><i class="fas fa-at"></i> &nbsp &nbsp Email Address</label>
                            <div class="invalid-feedback">
                                Please Enter a valid email!
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="Password" placeholder="Password" name="password" required>
                            <label for="Password" class="form-label"><i class="fas fa-lock"></i> &nbsp &nbsp Password</label>
                            <div class="invalid-feedback">
                               Please enter your password!
                            </div>
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="invalidCheck" required>
                            <label class="form-check-label" for="invalidCheck">
                                Agree to terms and conditions
                            </label>
                            <div class="invalid-feedback">
                                You must agree before submitting.
                            </div>
                        </div>
                        <div class="submit-btn mb-3">
                            <button name="action" value="signup" class="btn btn-primary" type="submit">SignUp</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>

    <!-- Compiled and minified JavaScript-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    
    <script>
        var el = document.querySelectorAll('.tabs');
        var instance = M.Tabs.init(el);
    </script>
    
    <!-- Bootstrap js bundle-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="../public/js/login.js"></script>

</html>

