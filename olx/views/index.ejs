      <!-- CSS Links -->
        <link rel="stylesheet" href="../public/css/index.css" />
        <%if(user!=null){%>
          <%if(user&&user.email){%>   
            <title><%=user.email%></title>
            <%}else{%>
            <title>welcome</title>
            <%}%>
        <%}%> 

  </head>
  <body>
      <div class="head">
        <%- include('header') %>
        <div class="landing-text">
          <h1 class="he">Welcome to EX Change</h1>
          <h4>Lorem ipsum dolor sit.</h4>
        </div>
        <svg
          class="wave"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 1440 320">
          <path
            fill="#f4f6f6"
            fill-opacity="1"
